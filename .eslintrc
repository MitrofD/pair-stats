{
  "parser": "babel-eslint",
  "extends": [
    "airbnb-base/legacy",
    "plugin:flowtype/recommended"
  ],
  "plugins": [
    "flowtype",
    "flowtype-errors"
  ],
  "env": {
    node: true,
  },
  "rules": {
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "flowtype-errors/show-errors": 2,
    "flowtype-errors/show-warnings": 1,
    "max-len": [
      2,
      200
    ],
    "no-continue": 0,
    "no-undef": 0,
    "no-underscore-dangle": 0,
    "no-unused-vars": 1,
    "no-eval": 0,
    "spaced-comment": 1
  }
}
